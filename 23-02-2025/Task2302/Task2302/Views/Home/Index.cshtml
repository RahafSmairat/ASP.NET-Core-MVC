@{
    ViewData["Title"] = "Home Page";
}
    @model IEnumerable<Task2302.Models.User>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Edit User</th>
                <th>Delete User</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td><a asp-action="Edit" asp-route-UserId="@user.UserId">Edit</a></td>
                    <td>
                        <a asp-action="Delete" asp-controller="Home" asp-route-UserId="@user.UserId" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                    <td><a asp-action="Details" asp-route-UserId="@user.UserId">Details</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>
