@{
    Layout = null;
}
<h3>This page has no layout.</h3>

@{
    var books = new[]
    {
        new { Title = "C# Basics", Author = "John Doe" },
        new { Title = "ASP.NET MVC", Author = "Jane Doe" },
        new { Title = "Entity Framework", Author = "Mark Smith" }
    };
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h3>Books List</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in books)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
