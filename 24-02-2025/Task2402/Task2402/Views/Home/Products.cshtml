
@{
    ViewData["Title"] = "Products";
}

@model IEnumerable<Task2402.Models.Product>
@if (!string.IsNullOrEmpty(Context.Session.GetString("Name")) && Context.Session.GetString("Role") == "admin")
{
    <a asp-action="AddProduct" class="btn btn-info">Add New Product</a>
}
<div class="container mt-5">
    <div class="row justify-content-center">
        @foreach (var product in Model)
        {
            <div class="col-md-5 mb-4">
                <div class="card">
                    <img src="@product.Image" class="card-img-top" alt="Image">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">@product.Price $</p>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-controller="Home" asp-route-Id="@product.Id" class="btn btn-primary">View Details</a>
                            @if (!string.IsNullOrEmpty(Context.Session.GetString("Name")) && Context.Session.GetString("Role") == "admin")
                            {
                                <a asp-action="Delete" asp-controller="Home" asp-route-Id="@product.Id" onclick="return confirm('Are you sure you want to delete this user?');" class="btn btn-danger">Delete</a>
                                <a asp-action="Edit" asp-route-Id="@product.Id" class="btn btn-success">Edit</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
    }
    </div>
</div>

